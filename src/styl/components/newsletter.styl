.footer
    &__conteudo
        background-color: rgba(0,0,0,0.7)
        display: flex
        flex-flow: column nowrap
        align-items: center
        width: 100%
        &-container
            padding: 40px
            display: flex
            flex-flow: column nowrap
            align-items: center
            width: 100%
            max-width: 1300px
        &-content
            display: flex
            justify-content: flex-start
            color: #ffffff;
            font-size: 14px;
            font-weight: 400;
            line-height: 24px;
            text-align: left 
            & .texts
                flex: 1
                margin-left: 30px
        & h3
            color: #ff4444;
            font-size: 25px;
            font-weight: 400;
            text-transform: uppercase;
            padding-bottom 17px
            border-bottom: 1px solid rgba(255,255,255,0.12)
            width: 100%
            display: block
            text-align: center
            margin-bottom: 30px
            & strong 
                font-weight: 700;
    &__news
        display: flex
        background-color: #000000
        margin: 0 
        padding: 0
        height 80px
        margin: 0
        margin-top: 30px
        &-column
            flex: 0 0 50%
            display: flex
            height 100%
            justify-content: center
            align-items: center
            &.input
                padding 0 25px
            &:first-child
                & a 
                    display: flex
                    justify-content: center
                    align-items: center
                    height 100%
                    overflow hidden
                & img 
                    height 100%
                    width: auto
                    transition: all 200ms ease-in
                    &:hover
                        transform: perspective(1000px) translateZ(50px);
            &-title
                flex: 0 0 180px
                color: #ffffff;
                font-size: 15px;
                font-weight: 700;
                text-transform: uppercase;
                text-align: left 
            &-input
                flex: 1
                & .footerNewsForm
                    width: 100% !important
                    height 100%
                    margin-left: 20px
                    justify-content: flex-end
                    & .btNews
                        width: 50px
                        height 30px
                        background-color: #ff4444;
                        color: #ffffff;
                        font-size: 14px;
                        font-weight: 700;
                        text-transform: uppercase;
                        margin: 0
                        margin-left: 4px
                    & .newsletter-box
                        display: flex
                        flex-flow: row nowrap
                        justify-content: space-between
                        & input
                            flex: 0 0 calc(50% - 4.5px)
                            height 30px
                            &, &::placeholder
                                color: #333333;
                                font-family: "Open Sans";
                                font-size: 14px;
                                font-weight: 400;
                        &:nth-child(2)
                            display: none