.footer
    &__news
        display: flex
        background-color: #000000
        margin: 0 
        padding: 0
        height 80px
        margin: 30px 0
        &-column
            flex: 0 0 50%
            display: flex
            height 100%
            justify-content: center
            align-items: center
            &.input
                padding 0 25px
            &:first-child
                & a 
                    display: flex
                    justify-content: center
                    align-items: center
                    height 100%
                    overflow hidden
                & img 
                    height 100%
                    width: auto
                    transition: all 200ms ease-in
                    &:hover
                        transform: perspective(1000px) translateZ(50px);
            &-title
                flex: 0 0 180px
                color: #ffffff;
                font-size: 15px;
                font-weight: 700;
                text-transform: uppercase;
                text-align: left 
            &-input
                flex: 1
                & .footerNewsForm
                    width: 100% !important
                    height 100%
                    margin-left: 20px
                    justify-content: flex-end
                    & .btNews
                        width: 50px
                        height 30px
                        background-color: #ff4444;
                        color: #ffffff;
                        font-size: 14px;
                        font-weight: 700;
                        text-transform: uppercase;
                        margin: 0
                        margin-left: 4px
                    & .newsletter-box
                        display: flex
                        flex-flow: row nowrap
                        justify-content: space-between
                        & input
                            flex: 0 0 calc(50% - 4.5px)
                            height 30px
                            &, &::placeholder
                                color: #333333;
                                font-family: "Open Sans";
                                font-size: 14px;
                                font-weight: 400;
                        &:nth-child(2)
                            display: none