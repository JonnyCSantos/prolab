@media screen and (max-width: 992px)
    .head
        position: fixed !important
        left 0 !important
        top: 0 !important
        background-color: #FFFFFF
        & .fbits-center-responsivo
            margin-left: 40px
            & > .align-items
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                position relative
                & > a 
                    order: 1
                & .top-icons
                    margin: 0 !important
                    margin-left: 0 !important
                    flex: 0 0 100%
                    & > .ico-carrinho
                        transform: scale(0.6)
                    & > .ico-minha-conta
                        margin-left: 0 !important
                        & > .texts
                            font-size: 12px !important
                            font-family: 'Open Sans', sans-serif !important
                            margin-left: 2px
                            & span 
                                font-size: 11px
                        & .fa-user-circle
                            transform: scale(0.6)
    .headerLogo 
        display: inline-block;
        width: 100px;
        position: absolute
        top: 50%
        left 50%
        transform: translate(-40%, -50%)
        & img
            height 40px
            width: auto
            margin-top: 0 !important
    .head 
        & > .menu-container
            display: block
            position: fixed 
            top: 0
            left: 0
            width: 300px
            height 100%
            background-color: transparent
            border-left: 0
            transition: transform 300ms ease-in
            transform: translateX(-263px)
            &::-webkit-scrollbar-track
                background-color: initial
            & .ico-menu-fecha
                font-size: 0
                width: 35px
                height 25px
                position relative
                border-bottom: 4px solid #000000 !important
                top: 25px
                background-color: transparent !important
                &:before
                    content ''
                    width: 100%
                    position: absolute
                    background-color: #000000
                    height 4px
                    top: 0
                    left 0
                &:after
                    content ''
                    width: 100%
                    position: absolute
                    background-color: #000000
                    height 4px
                    top: 65%
                    left 0
                    margin-top: -3.5px
            &.show
                transform: translateX(0)
            & > .menu-mobile-dynamic
                background-color: #FFFFFF !important
                & > ul 
                    display: flex
                    flex-direction: column
                    align-items: flex-start
                    height auto !important 
                    
                    & li 
                        width: 100% !important
                        border: 0 !important
                    & img 
                        display: none !important
                    & > li 
                        display: flex
                        justify-content: flex-start !important
                        width: 100%
                        flex 0 0 auto
                        height auto !important
                        line-height: 1 !important
                        padding: 0 10px !important
                        & > span ,
                        & > a 
                            display: inline-block;
                            line-height: 1;
                            width: 100%;
                            height: auto;
                            padding: 0
                            padding-top: 0 !important
                            padding-left: 0 !important
                            justify-content: flex-start !important
                            align-items: center
                            height 50px !important
                            display: flex !important
                            justify-content: flex-start !important
                            align-items: center !important
                        &.show 
                            & > ul 
                                display: flex !important
                        & > ul 
                            position: relative !important
                            display: none !important
                            flex-direction: column
                            top initial !important
                            left initial 
                            right initial 
                            bottom: initial
                            border: 0 !important
                            & > li 
                                height 50px
                                display: flex !important
                                justify-content: flex-start !important
                                padding: 0 10px !important
                                align-items: center !important
                                & > a 
                                    padding: 0 !important
                                    margin: 0 !important
                                    margin-top: 0 !important